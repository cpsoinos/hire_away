<%= form_for @event do |f| %>
  <% @event.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>

  <div class="venue-container">
    <div class="field" id="venues">
      <%= f.label :venue %><br>
      <%= f.select(:venue_id, @venues.collect { |venue| [venue.name, venue.id] } , { prompt: "Choose venue" }) %>
    </div>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time, :ampm => true %></div>

  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time, :ampm => true %></div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
